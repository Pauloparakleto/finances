<center>
  <div class="container">
    <div class="col-md-4">
      <main class="form-signin">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <form>
              <div class="mb-3 mt-3">
                <%= image_tag("logo_login.png", width: '82', height: '67') %>
              </div>
              <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

              <div class="form-floating mb-3">
                <%= f.input :email,
                            label: false,
                            required: false,
                            autofocus: true,
                            placeholder: "name@example.com",
                            input_html: { autocomplete: "email", class: "form-control", id: "floatingInput", } %>
              </div>
              <div class="form-floating mb-3">
                <%= f.input :password,
                            label: false,
                            required: false,
                            placeholder: "Password",
                            input_html: { autocomplete: "current-password", class: "form-control", id: "floatingPassword", } %>
              </div>

              <div class="checkbox mb-3">
                <label>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </label>
              </div>
              <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary" %>
              <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
            </form>
          <% end %>
        </main>
    </div>
  </div>
</center>
