<% @payments.each do |payment| %>
  <p> <%= payment.first.strftime("%B %Y") %> </p>
  <% payment.last.each do |body| %>
    <table class="table">
      <thead>
      <tr> Data </tr>
      <tr>
        <th>Title</th>
        <th>Value</th>
        <th>Ações</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <%= body.date.strftime("%d/%m") %>
        </tr>
        <tr>
          <td>
            <%= body.title %>
          </td>
          <td>
            <%= body.value %>
          </td>
          <td>
            <%= link_to 'Show', body %>
            <%= link_to 'Edit', edit_payment_path(body) %>
            <%= link_to 'Destroy', body, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          </td>
        </tr>
      </tbody>
<!--      <tfoot>-->
<!--      ...-->
<!--      </tfoot>-->
    </table>
  <% end %>
<% end %>


