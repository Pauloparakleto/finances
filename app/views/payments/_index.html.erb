<%== pagy_bootstrap_nav(@calendar[:year]) %>
<%== pagy_bootstrap_nav(@calendar[:month]) %>


<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Value</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.title %></td>
      <td><%= payment.description %></td>
      <td><%= payment.value %></td>
      <td><%= payment.date %></td>
      <td><%= link_to 'Show', payment %></td>
      <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
      <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

