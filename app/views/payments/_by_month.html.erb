<% @payments.reverse_each do |payment| %>
  <h4> <%= payment.first.strftime("%B %Y") %> </h4>
    <table class="table">

      <tbody>
      <% payment.last.each do |body| %>
        <tr>
          <td>
            <%= body.date.strftime("%d/%m") %>
          </td>
          <td>
            <%= body.title %>
          </td>
          <td>
            <%= body.value %>
          </td>
          <td>
            <%= link_to 'Show', body %>
            <%= link_to 'Edit', edit_payment_path(body) %>
            <%= link_to 'Destroy', body, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
<!--      <tfoot>-->
<!--      ...-->
<!--      </tfoot>-->
    </table>
<% end %>


