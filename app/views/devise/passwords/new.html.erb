<main>
  <center>
    <div class="container">
      <div class="col-md-4">
        <div class="mb-3 mt-3">
          <%= image_tag("logo_login.png", width: '82', height: '67') %>
        </div>
        <h2 class="h3 mb-3 fw-normal">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="form-floating mb-3">
              <%= f.input :email,
              label: false,
              required: true,
              autofocus: true,
              placeholder: "name@example.com",
              input_html: { autocomplete: "email", class: "form-control", id: "floatingInput" }%>
            </div>
          </div>
          
          <%= f.button :submit, "Send me instructions", class: "btn btn-primary btn-lg btn-block" %>
        
        <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </center>
</main>
